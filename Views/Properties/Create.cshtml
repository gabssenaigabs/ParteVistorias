@using CondoHub.Models.Entities
@model Property
@{
    ViewData["Title"] = "Novo Imóvel";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <h3 class="app-title">Novo Imóvel</h3>
                <p class="app-subtitle mb-0">Preencha os dados do imóvel</p>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-500">Número</label>
                                    <input asp-for="Numero" type="text" class="form-control" placeholder="Número" />
                                    <span asp-validation-for="Numero" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-500">Bloco</label>
                                    <input asp-for="Bloco" type="text" class="form-control" placeholder="Bloco" />
                                    <span asp-validation-for="Bloco" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-500">Tipo</label>
                                    <select name="TipoImovel" class="form-control">
                                        <option value="">Selecione...</option>
                                        <option value="Apartamento">Apartamento</option>
                                        <option value="Casa">Casa</option>
                                        <option value="Comercial">Comercial</option>
                                    </select>
                                    <span class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-500">Área (m²)</label>
                                    <input asp-for="Area" type="number" step="0.01" class="form-control"
                                        placeholder="0,00" />
                                    <span asp-validation-for="Area" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-500">Proprietário</label>
                                    <input name="ProprietarioNome" type="text" class="form-control"
                                        placeholder="Nome completo" value="@ViewBag.ProprietarioNome" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-500">Status</label>
                                    <select asp-for="Type" class="form-control">
                                        <option value="">Selecione...</option>
                                        <option value="Vago">Vago</option>
                                        <option value="Ocupado">Ocupado</option>
                                        <option value="Alugado">Alugado</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 contract-action-buttons">
                            <a href="@Url.Action("Index", "Properties")" class="contract-btn contract-btn-cancel">
                                Cancelar
                            </a>
                            <button type="submit" class="contract-btn contract-btn-submit">
                                Cadastrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}