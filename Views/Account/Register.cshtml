@{
    ViewData["Title"] = "Criar Conta";
}

<div>

    <div class="auth-page d-flex align-items-center justify-content-center min-vh-100">
        <div class="auth-container text-center auth-container--wide">
            <div class="mb-4">
                <div class="header-icon d-inline-flex bg-primary rounded-xl">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none"
                        stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        aria-hidden="true">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                </div>
            </div>

            <h1 class="app-title">Criar Conta no CondoHub</h1>
            <p class="app-subtitle mb-5">Escolha o tipo de cadastro</p>

            <div class="register-grid">
                <div class="register-card">
                    <div class="register-card-icon bg-blue-light" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                            class="icon-inner text-blue" aria-hidden="true">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                    </div>
                    <h3 class="register-card-title">Morador</h3>
                    <p class="register-card-subtitle">Acesso às informações gerais do condomínio</p>
                    <ul class="register-card-features">
                        <li>Ver avisos</li>
                        <li>Solicitar manutenções</li>
                        <li>Ver cobranças</li>
                    </ul>
                    <div class="register-card-footer">
                        <a asp-controller="Account" asp-action="RegisterMorador" class="btn btn-blue w-100"
                            aria-label="Cadastrar como Morador">Cadastrar como Morador</a>
                    </div>
                </div>

                <div class="register-card">
                    <div class="register-card-icon bg-purple-light" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                            class="icon-inner text-purple" aria-hidden="true">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                        </svg>
                    </div>
                    <h3 class="register-card-title">Síndico</h3>
                    <p class="register-card-subtitle">Gerenciar comunicação e avisos do condomínio</p>
                    <ul class="register-card-features">
                        <li>Visualizar tudo</li>
                        <li>Gerenciar avisos</li>
                        <li>Publicar eventos</li>
                    </ul>
                    <div class="register-card-footer">
                        <a asp-controller="Account" asp-action="RegisterSindico" class="btn btn-purple w-100"
                            aria-label="Cadastrar como Síndico">Cadastrar como Síndico</a>
                    </div>
                </div>

                <div class="register-card">
                    <div class="register-card-icon bg-green-light" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                            class="icon-inner text-green" aria-hidden="true">
                            <rect x="3" y="3" width="18" height="18" rx="2"></rect>
                            <line x1="9" y1="10" x2="15" y2="10"></line>
                            <line x1="9" y1="14" x2="15" y2="14"></line>
                        </svg>
                    </div>
                    <h3 class="register-card-title">Gestor</h3>
                    <p class="register-card-subtitle">Controle total da gestão condominial</p>
                    <ul class="register-card-features">
                        <li>Acesso completo</li>
                        <li>Gestão financeira</li>
                        <li>Controle de contratos</li>
                    </ul>
                    <div class="register-card-footer">
                        <a asp-controller="Account" asp-action="RegisterGestor" class="btn btn-green w-100"
                            aria-label="Cadastrar como Gestor">Cadastrar como Gestor</a>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <span class="text-gray-600">Já tem uma conta? </span>
                <a asp-controller="Account" asp-action="Login" class="link-primary text-decoration-none">Fazer login</a>
            </div>

            <div class="mt-4 text-gray-500 small">© 2025 CondoHub. Todos os direitos reservados.</div>
        </div>
    </div>