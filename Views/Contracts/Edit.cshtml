@using CondoHub.Models.Entities
@model Contract
@{
    ViewData["Title"] = "Editar Contrato";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <h3 class="app-title">Editar Contrato</h3>
                <p class="app-subtitle mb-0">Atualize os dados do contrato</p>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="Type" type="hidden" />

                        @if (Model.Type == ContractType.LocatarioProprietario)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">Nome do Locatário</label>
                                        <input asp-for="LocatarioNome" type="text" class="form-control"
                                            placeholder="Nome do locatário" />
                                        <span asp-validation-for="LocatarioNome" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">Nome do Proprietário</label>
                                        <input asp-for="ProprietarioNome" type="text" class="form-control"
                                            placeholder="Nome do proprietário" />
                                        <span asp-validation-for="ProprietarioNome" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label fw-500">Imóvel</label>
                                <select asp-for="PropertyId" class="form-control" asp-items="ViewBag.PropertyList">
                                    <option value="">Selecione um imóvel</option>
                                </select>
                                <span asp-validation-for="PropertyId" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label fw-500">Valor Mensal (R$)</label>
                                <input asp-for="ValorMensal" type="number" step="0.01" class="form-control"
                                    placeholder="0,00" />
                                <span asp-validation-for="ValorMensal" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">Data de Início</label>
                                        <input asp-for="DataInicio" type="date" class="form-control" />
                                        <span asp-validation-for="DataInicio" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">Data de Término</label>
                                        <input asp-for="DataFim" type="date" class="form-control" />
                                        <span asp-validation-for="DataFim" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.Type == ContractType.Condomino)
                        {
                            <div class="form-group mb-3">
                                <label class="form-label fw-500">Nome Completo</label>
                                <input asp-for="Nome" type="text" class="form-control" placeholder="Digite o nome..."
                                    required />
                                <span asp-validation-for="Nome" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">CPF</label>
                                        <input asp-for="CPF" type="text" class="form-control"
                                            placeholder="000.000.000-00" />
                                        <span asp-validation-for="CPF" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">Telefone</label>
                                        <input asp-for="Telefone" type="text" class="form-control"
                                            placeholder="(11) 99999-9999" />
                                        <span asp-validation-for="Telefone" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label fw-500">Email</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">Unidade</label>
                                        <input asp-for="Unidade" type="text" class="form-control"
                                            placeholder="Ex: Bloco A, Apto 101" />
                                        <span asp-validation-for="Unidade" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">Tipo</label>
                                        <select asp-for="TipoCondomino" class="form-control">
                                            <option value="">Selecione...</option>
                                            <option value="Proprietario">Proprietário</option>
                                            <option value="Morador">Morador</option>
                                            <option value="Inquilino">Inquilino</option>
                                        </select>
                                        <span asp-validation-for="TipoCondomino" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.Type == ContractType.Funcionario)
                        {
                            <div class="form-group mb-3">
                                <label class="form-label fw-500">Nome Completo</label>
                                <input asp-for="Nome" type="text" class="form-control" placeholder="Digite o nome..."
                                    required />
                                <span asp-validation-for="Nome" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">CPF</label>
                                        <input asp-for="CPF" type="text" class="form-control"
                                            placeholder="000.000.000-00" />
                                        <span asp-validation-for="CPF" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">Telefone</label>
                                        <input asp-for="Telefone" type="text" class="form-control"
                                            placeholder="(11) 99999-9999" />
                                        <span asp-validation-for="Telefone" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">Cargo</label>
                                        <select asp-for="Cargo" class="form-control">
                                            <option value="">Selecione...</option>
                                            <option value="Zelador">Zelador</option>
                                            <option value="Portaria">Portaria</option>
                                            <option value="Administrativo">Administrativo</option>
                                            <option value="Outros">Outros</option>
                                        </select>
                                        <span asp-validation-for="Cargo" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label fw-500">Turno</label>
                                        <select asp-for="Turno" class="form-control">
                                            <option value="">Selecione...</option>
                                            <option value="Manhã">Manhã</option>
                                            <option value="Tarde">Tarde</option>
                                            <option value="Noite">Noite</option>
                                            <option value="Integral">Integral</option>
                                        </select>
                                        <span asp-validation-for="Turno" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label fw-500">Data de Admissão</label>
                                <input asp-for="DataAdmissao" type="date" class="form-control" />
                                <span asp-validation-for="DataAdmissao" class="text-danger small"></span>
                            </div>
                        }

                        <div class="d-flex gap-2 mt-4" style="display: flex; gap: 12px;">
                            <a href="@Url.Action("Index")" class="btn"
                                style="flex: 1; border: 1px solid #ddd; border-radius: 8px; padding: 11px; color: #333; font-weight: 600; text-decoration: none; text-align: center; background: white;">
                                Cancelar
                            </a>
                            <button type="submit" class="btn"
                                style="flex: 1; background: #2563eb; color: white; border: none; border-radius: 8px; padding: 11px; font-weight: 600; cursor: pointer;">
                                Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}