@using CondoHub.Models.Entities
@model Contract
@{
    ViewData["Title"] = "Novo Condômino";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <h3 class="app-title">Novo Condômino</h3>
                <p class="app-subtitle mb-0">Preencha os dados para cadastrar um novo condômino</p>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="CreateCondomino" method="post">
                        <div class="form-group mb-3">
                            <label class="form-label fw-500">Nome Completo</label>
                            <input asp-for="Nome" type="text" class="form-control" placeholder="Nome completo"
                                required />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-500">CPF</label>
                                    <input asp-for="CPF" type="text" class="form-control"
                                        placeholder="000.000.000-00" />
                                    <span asp-validation-for="CPF" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-500">Telefone</label>
                                    <input asp-for="Telefone" type="text" class="form-control"
                                        placeholder="(00) 0000-0000" />
                                    <span asp-validation-for="Telefone" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label fw-500">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Digite seu email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-500">Bloco</label>
                                    <input asp-for="Unidade" type="text" class="form-control"
                                        placeholder="Ex: Bloco A, B, C..." />
                                    <span asp-validation-for="Unidade" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-500">Tipo</label>
                                    <select asp-for="TipoCondomino" class="form-control">
                                        <option value="">Selecione...</option>
                                        <option value="Proprietario">Proprietário</option>
                                        <option value="Morador">Morador</option>
                                        <option value="Inquilino">Inquilino</option>
                                    </select>
                                    <span asp-validation-for="TipoCondomino" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 contract-action-buttons">
                            <a href="@Url.Action("Index", new { tab = "residents" })"
                                class="contract-btn contract-btn-cancel">
                                Cancelar
                            </a>
                            <button type="submit" class="contract-btn contract-btn-submit">
                                Cadastrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}